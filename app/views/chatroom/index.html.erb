<h2 class="ui center aligned icon header">
  <i class="circular red paper plane outline icon"></i>
  Chat
</h2>


<div class="ui grid">

<div class="four wide column">
  <div class="ui fluid raised card chatbox">
    <div class="content">
      <div class="ui inverted vertical fluid pointing menu">
        <a class="active item">
          Home
        </a>
        <a class="item">
          Messages
        </a>
        <a class="item">
          Friends
        </a>
      </div>
    </div>
  </div>
</div>

<div class="twelve wide column">

  <div class="ui fluid raised card chatbox">
    <div class="content">
      <div class="ui feed">
        <h4 class="ui header">Test Chat</h4>

          <%= render @messages %>

      </div>
      </div>
    <div class="extra content">
      <%= form_for(@message, html: {class: "ui reply form"}, role: "form", url: message_path, data: {turbo_method: :post}) do |f| %>

        <div class="field">
        <div class="ui input fluid icon">
          <%= f.text_field :body %>
          <%= f.button '<i class="bordered blue inverted icon paper plane"> </i>'.html_safe %>
        </div>
        </div>
      <% end %>
    </div>
  </div>

  </div>

</div>